<html>
<head>
  <meta charset="utf-8">
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
  <meta name="description" content="">
  <link href="//cdn.bootcss.com/bootstrap/4.0.0-alpha.3/css/bootstrap.css" rel="stylesheet">
</head>
<body>
<div class="bs-header" id="content">
  <div class="container">
    <h1>Just Input A URL</h1>
    <div class="form-group">
      <input type="text" id="url" class="form-control" placeholder="e.g. http://www.baidu.com">
    </div>
    <button type="button" class="btn btn-primary" id="snapshot">Snapshot</button>
    <div id="result" style="margin-top: 20px">

    </div>
  </div>
</div>
<script src="//cdn.bootcss.com/jquery/2.1.3/jquery.js"></script>
<script src="//cdn.bootcss.com/bootstrap/4.0.0-alpha/js/bootstrap.min.js"></script>
<script>

  $(document).on('click', '#snapshot', function () {
    var url = $('#url').val();
    $.ajax({
      type:'GET',
      url:'/url?url='+url,
      success:function (result) {
        if(result.success==1){
          var html='';
          $.each(result.data,function (i, v) {
            html+='<div style="margin-bottom: 30px;border: 1px solid #e1e1e8;"><h3>'+v.title+'</h3>' +
                    '<img src="/images/'+v.src+'.png"/>'
                    '</div>';
          })
          $('#result').append(html);
          console.log(html)
        }
      }
    })
  })
</script>
</body>
</html>